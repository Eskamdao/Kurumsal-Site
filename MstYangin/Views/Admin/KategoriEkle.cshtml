@model MstYangin.Models.Kategori

@{

    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var insertAjaxOptions = new AjaxOptions
    {
        AllowCache = false,
        Url = Url.Action("KategoriEkle"),
        HttpMethod = "post",
        Confirm = "Kategori Eklensin  mi?",
        UpdateTargetId = "tblKategori",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "progress",
        LoadingElementDuration = 500



    };
}
<head>
   

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h4 class="page-header">Kategori Ekle</h4>
            <div id="progress" class="progress" style="display: none;">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" style="width: 100%"></div>
            </div>
            <div id="progress" class="progress" style="display: none;">

                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" style="width: 100%"></div>

            </div>

            @using (Ajax.BeginForm(insertAjaxOptions))
            {
                @Html.AntiForgeryToken()



                <div class="form-group">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
            
                        <label class="control-label">Kategori Adı</label>
                        @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })

                    </div>
                </div>
                    <div class="form-group">
                       
                            <input type="submit" value="Ekle" class="btn btn-success" />
                        
                    </div>
                

            }
        </div>
    </div>



  

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h4 class="page-header">Kategoriler</h4>
                <div id="tblKategori">
                    @{
                        Html.RenderAction("KategoriListe");
                    }
                </div>
            </div>
        </div>
  

</div>



@model IEnumerable<MstYangin.Models.Iletisim>
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var deleteAjaxOptions = new AjaxOptions
    {
        LoadingElementId = "progress",
        Confirm = "Silmek İstediğinize emin misiniz?",
        OnSuccess = "OnSuccess(this)"
    };
}

<h2>Iletisim</h2>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div id="progress" class="progress" style="display: none;">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" style="width: 100%"></div>
</div>
<div id="progress" class="progress" style="display: none;">

    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" style="width: 100%"></div>

</div> 

<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            Konu
        </th>
        <th>
            Ad
        </th>
        <th>
            Eposta
        </th>

        <th>
            Mesaj
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var mod in Model)
    {
        <tr>

            <td>
                @mod.Konu
            </td>
            <td>
                @mod.Ad
            </td>
            <td>
                @mod.Eposta
            </td>

            <td>
                @mod.Mesaj
            </td>
            <td>
                   
                @Ajax.ActionLink("Sil","IletisimSil",new {Id=mod.Id},deleteAjaxOptions,new{@class="btn btn-danger btn-sm"})
            </td>
        </tr>

    }
    </tbody>

</table>

<script>
    function OnSuccess(btn) {
        $(btn).closest('tr').remove();
    }
</script>